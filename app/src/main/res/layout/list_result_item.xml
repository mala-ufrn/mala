<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/results_list_bg">

        <TextView
            android:id="@+id/lbl_result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Titulo de livro"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/lbl_result_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_result_title"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Nome de autor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lbl_result_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_result_author"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/local_orange"
            android:text="Localização" />

        <TextView
            android:id="@+id/lbl_result_edition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lbl_result_local"
            android:paddingRight="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Edição e quantidade"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lbl_result_qnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lbl_result_edition"
            android:layout_below="@id/lbl_result_local"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Edição e quantidade"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>