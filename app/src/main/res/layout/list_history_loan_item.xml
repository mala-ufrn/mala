<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:background="@color/accent">

    <TextView
        android:textStyle="bold"
        android:id="@+id/lbllistTitulo_history_loan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="2dp"
        android:textSize="13dip"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/lbllistAutor_history_loan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="2dp"
        android:textSize="10dip" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/lbllistBiblioteca_history_loan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="2dp"
        android:textSize="7dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft">
        <TextView
            android:id="@+id/lbllistDtEmprestimo_history_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/lbllistDtDevolucao_history_loan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textSize="10dip" />


    </LinearLayout>

</LinearLayout>
