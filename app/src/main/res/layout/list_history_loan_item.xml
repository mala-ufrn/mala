<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:paddingTop="2dp"
    android:background="@color/accent">

    <TextView
        android:textStyle="bold"
        android:id="@+id/lbllistTitulo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="2dp"
        android:textSize="13dip" />

    <TextView
        android:id="@+id/lbllistAutor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="2dp"
        android:textSize="10dip" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/lbllistBiblioteca"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="2dp"
        android:textSize="7dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lbllistDtDevolucao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:textSize="10dip" />

        <TextView
            android:id="@+id/lbllistDtEmprestimo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
            android:paddingTop="2dp"
            android:textSize="10dip" />
    </LinearLayout>

</LinearLayout>
