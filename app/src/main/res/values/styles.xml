<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Without ActionBar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- WelcomeActivity Theme -->
    <style name="AppTheme.NoActionBar.Dark">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!-- ActivityLogin theme (Without ActionBar)-->
    <style name="ActLoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <!-- Stuffs themes -->
    <style name="AppDefaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppSecondaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/secBtnBg</item>
        <item name="android:textColor">@color/secButClr</item>
    </style>

    <style name="SpinnerLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ErrorAppearance" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- etc -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


